{

    "manifest_version": 2,
    "name": "ModifyCursor",
    "version": "1.0",
  
    "description": "Modify your cursor easily !",
  
    "icons": {
      "64": "icons/cursor.png"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["cursor.js"]
      }
    ],

    "browser_action": {
        "default_icon": {
          "64": "icons/cursor.png"
        },
        "default_title": "ModifyCursor",
        "default_popup": "popup/cursor.html"
      }
  
  }
  